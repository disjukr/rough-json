{
  "$schema": "https://deno.land/x/deno/cli/schemas/config-file.v1.json",
  "name": "@disjukr/rough-json",
  "version": "0.1.0",
  "exports": "./rough-json.ts",
  "publish": {
    "include": [
      "LICENSE",
      "README.md",
      "rough-json.ts"
    ]
  },
  "fmt": {
    "semiColons": true,
    "singleQuote": false,
    "lineWidth": 100,
    "indentWidth": 2
  },
  "lint": {
    "rules": {
      "tags": [
        "recommended"
      ]
    }
  },
  "compilerOptions": {
    "strict": true
  },
  "tasks": {
    "build": "npm run build",
    "check": "deno check rough-json.ts",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test",
    "verify": "deno task fmt && deno task lint && deno task check && deno task test && deno task build"
  }
}
