{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "skipLibCheck": true,
    "noEmitOnError": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "rough-json.ts"
  ],
  "exclude": [
    "dist",
    "**/*.test.ts"
  ]
}
